@using HotelManagementSystem.Models.Rooms
@model CreateRoomInputModel
@{
    this.ViewData["Title"] = "Create Room";
} 

<form asp-controller="Rooms" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
       <label asp-for="Name"></label>
       <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
       <label asp-for="Description"></label>
       <textarea asp-for="Description" rows="12" class="form-control">
       </textarea>
    </div>
    <div class="form-group">
        <label asp-for="MainImage"></label>
        <input asp-for="MainImage"/>
    </div>
    <div class="form-group">
       <select class="form-control" asp-for="RoomType">
           @foreach(var roomType in this.Model.RoomTypes){
               <option value="@roomType">@roomType</option>
           }
       </select>
    </div>
    <div class="form-group">
       <select asp-items="@this.Model.HotelItems" class="form-control custom-radio" asp-for="HotelId">
       </select>
    </div>
    <div class="form-check">
     <input asp-for="IsFree" class="form-check-input" type="checkbox" id="flexCheckDefault">
     <label asp-for="IsFree" class="form-check-label" for="flexCheckDefault">
     </label>
    </div>
    <div class="form-group">
       <label asp-for="Capacity"></label>        
       <input type="number" asp-for="Capacity" class="form-control" />
    </div>
    <div>

    </div>
    <input asp-for="HotelId"/> 
    <div>
        <label asp-for="AdultPrice"></label>
        <input class="form-control" asp-for="AdultPrice"/>
    </div>
    <div>
        <label asp-for="ChildPrice"></label>
        <input class="form-control" asp-for="ChildPrice"/>
    </div>
    <button class="btn btn-success">CREATE</button>
</form>                                              
